<h1>Edit Album Record</h1>

<form action="<%= album_url %>" method="POST">
  <input type=hidden name="_method" value="PATCH"> 
  <input type="hidden" name="albums[band_id]" value="<%= @album.band_id %>">
  <label>Album Title: </label>
  <input type="text" name="albums[title]" value="<%= @album.title %>">
  <br>
  <label>Album Year: </label>
  <input type="text" name="albums[year]" value="<%= @album.year %>">
  <br>
  <label>Album Type:   </label>
  <label>Live
    <input type="radio" name=albums[album_type] value="0" <%= !@album.album_type ? "checked" : "" %> >
  </label>
  <label>Studio
    <input type="radio" name=albums[album_type] value="1" <%= @album.album_type ? "checked" : "" %>>
  </label>
  <br>
  <input type="submit" value="Update">
</form>

